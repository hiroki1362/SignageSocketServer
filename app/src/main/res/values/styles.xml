<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/colorBackground</item>
    </style>

    <!-- ヘッダー部の文字スタイル -->
    <style name="original_text_style_header" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- 本文の文字スタイル -->
    <style name="original_text_style_status" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/status_font_size</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="original_text_style_normal" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
